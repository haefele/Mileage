        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Test" Click="ButtonBase_OnClick" />
        
        <dxg:GridControl Grid.Row="1" layout:LayoutSettings.ControlName="SomeGrid">
            
        </dxg:GridControl>
    </Grid>
